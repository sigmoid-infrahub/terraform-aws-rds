{
    "resourceSpecId": "11111111-1111-4111-8111-111111111111",
    "stableId": "main-rds",
    "displayName": "Main RDS Instance",
    "category": "database",
    "iconUrl": "https://cdn.sigmoid.us/icons/aws/full-size/svg/database/rds.svg",
    "resourceType": "database.rds",
    "vpcDependency": "required",
    "status": "draft",
    "position": { "x": 400, "y": 300 },
    "terraform": {
        "module": {
            "source": "github.com/sigmoid-hq/terraform-aws-rds",
            "ref": "main"
        }
    },
    "pricing": {
        "awsPricingLookup": {
            "serviceCode": "AmazonRDS",
            "unit": "hourly",
            "quantityProperties": ["instance_count", "count"],
            "quantityDefault": 1,
            "filters": [
                { "field": "location", "value": "${location}" },
                { "field": "instanceType", "propertyKeys": ["instance_class", "instanceClass"] },
                { "field": "databaseEngine", "defaultValue": "MySQL", "required": false },
                { "field": "deploymentOption", "defaultValue": "Single-AZ", "required": false }
            ]
        }
    }
}
